<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>

        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    %style{%d{HH:mm:ss:SSS} }{blue}%highlight{[%p] %c{1}:%line }{FATAL=red,
                    ERROR=red, WARN=yellow, INFO=magenta, DEBUG=blue,TRACE=magenta}%style{%m%n}{magenta}
                </pattern>
            </PatternLayout>

        </Console>
    </Appenders>

    <Loggers>

        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>

</Configuration>